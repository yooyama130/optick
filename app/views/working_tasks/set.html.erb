<div class = "container bg-light my-2 py-3">
  <div class = "row">
    <div class = "col-12">
      <h2>タスク時間計測</h2>
    </div>
  </div>
  <!--1. タスク選択欄-->
  <%= render 'working_tasks/task_select', {user: @user, my_tasks: @my_tasks} %>
  <!--2. 時間計測欄-->
  <div class = "time_measure">
    <div class = "row">
      <div class = "col-11 mx-auto">
        <h5>②計測を開始してください</h5>
      </div>
    </div>
    <!--時計機能-->
    <div class = "col-4 mx-auto">
      <div class = "mx-auto bg-white border border-dark">
        <div class = "bg-success">
          <h4 class = "text-light"><%= Time.now.strftime("%Y年%m月%d日") %></h4>
        </div>
        <p class = "text-center" style="font-size: 33px;" id="RealtimeClockArea"></p>
      </div>
    </div>
    <!--選択されたタスク表示-->
    <div class = "row my-3">
      <div class = "col-10 mx-auto">
        <div class = "row w-75 mx-auto">
          <!--左側（選択中タスク表示）-->
          <div class = "col-6 d-flex align-items-center">
            <div class= "card mr-4 py-2 w-50", style= "text-decoration: none;" >
              <p class = "text-center text-dark mb-2 text-truncate"><%= @selected_task.content %></p>
              <div class = "icon text-center">
                <%= attachment_image_tag @selected_task, :icon_image, :fill, 80, 80, resize: "60×60", format: "png", style: "width: 60px", fallback: "no_icon.png"  %>
              </div>
            </div>
            <p class = "d-inline-block text-center" style = "font-size: 1.2rem;"><%= "選択中…" %></p>
          </div>
          <!--右側（計測ボタン）-->
          <div class = "col-6 measure-button">
            <!--計測中（being_measured）がtrueなら終了ボタンを表示、そうでなければ開始ボタンを表示-->
            <% if WorkingTask.find_by(user_id: @user.id, task_id: @selected_task.id, being_measured?: true) %>
              <%= link_to user_working_task_stop_path, method: :post, style: "text-decoration: none;", remote: true do %>
                <button type="button" class="btn btn-outline-dark m-1 d-inline-block" style = "width: 100%; height: 7rem; font-size: 1.2rem;">
                  <i class="fas fa-stop"></i> STOP
                </button>
              <% end %>
            <% else %>
              <%= link_to user_working_task_start_path, method: :post, style: "text-decoration: none;", remote: true do %>
                <button type="button" class="btn btn-outline-dark m-1 d-inline-block" style = "width: 100%; height: 7rem; font-size: 1.2rem;">
                  <i class="fas fa-play"></i> START
                </button>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
