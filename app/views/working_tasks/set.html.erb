<div class = "container bg-light my-2 py-3">
  <div class = "row">
    <div class = "col-12">
      <h2>タスク時間計測</h2>
    </div>
  </div>
  <!--1. タスク選択欄-->
  <%= render 'working_tasks/task_select', {user: @user, my_tasks: @my_tasks} %>
  <!--2. 時間計測欄-->
  <div class = "time_measure">
    <div class = "row">
      <div class = "col-11 mx-auto">
        <h5>②計測を開始してください</h5>
      </div>
    </div>
    <!--時計機能-->
    <div class = "col-4 mx-auto">
      <div class = "mx-auto bg-white border border-dark">
        <div class = "bg-success">
          <h4 class = "text-light"><%= Time.now.strftime("%Y年%m月%d日") %></h4>
        </div>
        <p class = "text-center" style="font-size: 33px;" id="RealtimeClockArea"></p>
      </div>
    </div>
    <!--選択されたタスク表示-->
    <div class = "row my-3">
      <div class = "col-10 mx-auto">
        <% if @selected_task.blank? %>
          <p class = "text-secondary text-center my-5">タスクを選択してください</p>
        <% else %>
          <div class = "row w-75 mx-auto">
            <div class = "col-6 border border-dark bg-white">
              <p><%= @selected_task.content %></p>
            </div>
            <div class = "col-6">
              <%= link_to user_working_task_start_path, method: :post, style: "text-decoration: none;" do %>
                <button type="button" class="btn btn-outline-dark m-1 d-inline-block" style = "width: 45%; height: 5rem; font-size: 1.2rem;">
                  <i class="fas fa-play"></i> START
                </button>
              <% end %>
              <%= link_to user_working_task_stop_path, method: :post, style: "text-decoration: none;" do %>
                <button type="button" class="btn btn-outline-dark m-1 d-inline-block" style = "width: 45%; height: 5rem; font-size: 1.2rem;">
                  <i class="fas fa-stop"></i> STOP
                </button>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
