<div class = "container bg-light my-2 py-3">
  <div class = "row">
    <div class = "col-md-12">
      <h2><%= t("working_tasks.new.heading") %></h2>
    </div>
  </div>
  <!--1. タスク選択欄-->
  <%= render 'working_tasks/task_select', {user: @user, my_tasks: @my_tasks} %>
  <!--2. 時間計測欄-->
  <div class = "time_measure">
    <div class = "row">
      <div class = "col-md-11 mx-auto">
        <h5><%= t("working_tasks.new.sub-heading2") %></h5>
      </div>
    </div>
    <!--時計機能-->
    <div class = "col-md-8 mx-auto">
      <div class = "mx-auto bg-white border border-dark">
        <div class = "bg-success">
          <h4 class = "text-light px-3"><%= l(Date.current) %></h4>
        </div>
        <p class = "text-center" style="font-size: 33px;" id="RealtimeClockArea"></p>
      </div>
    </div>
    <!--選択されたタスク表示-->
    <div class = "row my-3">
      <div class = "col-md-10 mx-auto">
        <p class = "text-secondary text-center my-5"><%= t("working_tasks.new.no_selected_task") %></p>
      </div>
    </div>
  </div>
</div>
