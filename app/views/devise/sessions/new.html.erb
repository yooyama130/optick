<div class="container w-50 bg-light my-3">
  <div class = "row">
    <div class = col-6>
      <h2>ログイン画面</h2>
    </div>
  </div>

  <div class = "row">
    <div class = "col-8 px-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-2">
          <%= f.label :email, "Eメールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100" %>
        </div>

        <div class="field mb-2">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"w-100" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保持する" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class = "mt-3">登録がまだの方は <%= link_to "こちら", new_registration_path(resource_name) %> から新規登録してください</p>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <p class = "mt-3">パスワードをお忘れの方は <%= link_to "こちら", new_password_path(resource_name) %></p>
      <% end %>
    </div>
    <!--時計アイコン（透過）-->
    <div class = "col-4 position-relative" >
      <img class="d-inline-block w-100" style = "position: absolute; bottom:0.5rem; right: 4rem; z-index: 0; opacity: 0.2;"  src="/assets/icon_timer.png" alt="icon_timer">
    </div>
  </div>
</div>
