<div class="container container_for_forms bg-light py-4" style = "margin: 55px auto 110px auto;">
  <div class = "row">
    <div class = col-md-12>
      <h2><%= t("devise.sessions.log_in") %></h2>
    </div>
  </div>

  <div class = "row">
    <div class = "col-md-8 px-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <!--エラーメッセージ-->
        <p class = "text-danger"><%= flash[:alert] %></p>

        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100" %>
        </div>

        <div class="field mb-2">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"w-100" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class = "mt-3"><%= t("devise.sessions.not_yet_register") %> <%= link_to t("devise.click_here"), new_registration_path(resource_name) %> </p>
      <% end %>
    </div>
    <!--時計アイコン（透過）-->
    <!--通常時=>表示、レスポンシブ時=>非表示　none_for_responsive-->
    <div class = "none_for_responsive col-md-4 position-relative" >
      <%= image_tag asset_path('icon_timer.png', alt: 'icon_timer'), class: "d-inline-block w-100", style: "position: absolute; bottom:0.5rem; right: 4rem; z-index: 0; opacity: 0.2;" %>
    </div>
  </div>
</div>
