<div class="container container_for_forms bg-light py-4 my-5">
  <div class = "row">
    <div class = col-md-12>
      <h2><%= t("devise.registrations.registration") %></h2>
    </div>
  </div>

  <div class = "row">
    <div class = "col-md-8 px-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field mb-2">
          <%= f.label :name %>
          <em>(<%= t("devise.registrations.more_than") % {count: 3} %>)</em><br />
          <%= f.text_field :name, autofocus: true, class:"w-100" %>
          <!--個別エラーメッセージ-->
          <% if resource.errors.include?(:name) %>
            <p class = "text-danger"><%= resource.errors.full_messages_for(:name).first %>
          <% end %>
        </div>

        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100" %>
          <!--個別エラーメッセージ-->
          <% if resource.errors.include?(:email) %>
            <p class = "text-danger"><%= resource.errors.full_messages_for(:email).first %>
          <% end %>
        </div>

        <div class="field mb-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= t("devise.registrations.more_than") % {count: @minimum_password_length} %>)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"w-100" %>
          <!--個別エラーメッセージ-->
          <% if resource.errors.include?(:password) %>
            <p class = "text-danger"><%= resource.errors.full_messages_for(:password).first %>
          <% end %>
        </div>

        <div class="field mb-2">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-100" %>
          <!--個別エラーメッセージ-->
          <% if resource.errors.include?(:password_confirmation) %>
            <p class = "text-danger"><%= resource.errors.full_messages_for(:password_confirmation).first %>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>

      <%- if controller_name != 'sessions' %>
        <p class = "mt-3"><%= t("devise.registrations.already_register") %> <%= link_to t("devise.click_here"), new_session_path(resource_name) %> </p>
      <% end %>
    </div>
    <!--時計アイコン（透過）-->
    <!--通常時=>表示、レスポンシブ時=>非表示　none_for_responsive-->
    <div class = "none_for_responsive col-md-4 position-relative" >
      <%= image_tag asset_path('icon_timer.png', alt: 'icon_timer'), class: "d-inline-block w-100", style: "position: absolute; bottom:0.5rem; right: 4rem; z-index: 0; opacity: 0.2;" %>
    </div>
  </div>
</div>